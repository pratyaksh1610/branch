<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAgentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Agent id - 3143"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tvBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Body - I am able to cope with it and I shall find it amazing in one hour or so"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTimeStamp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Feb 18, 2023 15:00:43"
            android:textSize="18sp"
            android:textStyle="italic" />


        <View
            android:id="@+id/vSeparator1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#000000" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>